datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
}

// 進捗状況を示すためのEnum
enum ProgressStatus {
  completed
  in_progress
}

// 質問タイプ
enum QuestionType {
  multiple_choice
  fill_in_the_blank
}

// コースモデル
model Course {
  id          Int        @id @default(autoincrement())
  title       String     @unique
  description String?
  language    String
  lessons     Lesson[]
  progress    Progress[]
}

// レッスンモデル
model Lesson {
  id          Int        @id @default(autoincrement())
  course_id   Int
  title       String
  content     String?
  order_index Int
  course      Course     @relation(fields: [course_id], references: [id])
  exercises   Exercise[]
  progress    Progress[]
  quizzes     Quiz[]

  @@unique([course_id, title])
}

// 演習問題モデル
model Exercise {
  id              Int          @id @default(autoincrement())
  lesson_id       Int
  question        String
  starter_code    String?
  expected_output String?
  test_cases      Json?
  lesson          Lesson       @relation(fields: [lesson_id], references: [id])
  submissions     Submission[]

  @@unique([lesson_id, question])
}

// 提出コードモデル
model Submission {
  id          Int      @id @default(autoincrement())
  exercise_id Int
  session_id  String
  code        String
  result      String?
  created_at  DateTime @default(now())
  exercise    Exercise @relation(fields: [exercise_id], references: [id])
}

// 学習進捗モデル
model Progress {
  id         Int            @id @default(autoincrement())
  session_id String
  course_id  Int
  lesson_id  Int
  status     ProgressStatus
  course     Course         @relation(fields: [course_id], references: [id])
  lesson     Lesson         @relation(fields: [lesson_id], references: [id])

  @@unique([session_id, course_id, lesson_id])
}

// クイズモデル
model Quiz {
  id          Int              @id @default(autoincrement())
  lesson_id   Int
  title       String
  description String?
  lesson      Lesson           @relation(fields: [lesson_id], references: [id])
  questions   QuizQuestion[]
  submissions QuizSubmission[]

  @@unique([lesson_id, title])
}

// クイズ問題モデル
model QuizQuestion {
  id            Int              @id @default(autoincrement())
  quiz_id       Int
  text          String
  type          QuestionType
  options       String[]
  answer        String[]
  quiz          Quiz             @relation(fields: [quiz_id], references: [id])
  submissions   QuizSubmission[]

  @@unique([quiz_id, text])
}

// クイズ回答モデル
model QuizSubmission {
  id           Int          @id @default(autoincrement())
  session_id   String
  quiz_id      Int
  question_id  Int
  answer       String[]
  is_correct   Boolean
  submitted_at DateTime     @default(now())
  quiz         Quiz         @relation(fields: [quiz_id], references: [id])
  question     QuizQuestion @relation(fields: [question_id], references: [id])

  @@unique([session_id, quiz_id, question_id])
}
